{
  "name": "dashboard-server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:admin\"",
    "dev:server": "tsx --env-file=./.env --watch src --ignore 'src/**/*.test.ts, admin/' src/index.ts",
    "dev:admin": "cd admin && npm install --silent && npm run dev",
    "build": "npm run build:clean && npm run build:compile && npm run build:copy",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc",
    "build:copy": "cp -r views dist/ && cp -r public dist/ && cp -r data dist/ && mkdir -p dist/src/callbacks && find src/callbacks -name '*.liquid' -exec sh -c 'mkdir -p \"dist/$(dirname \"{}\")\" && cp \"{}\" \"dist/{}\"' \\;",
    "start": "tsx --env-file=./.env src/index.ts",
    "start:prod": "node --env-file=./.env dist/index.js",
    "test": "ENV=test jest --maxWorkers=2",
    "test:watch": "ENV=test jest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.0.3",
    "@fastify/view": "^10.0.1",
    "@logtail/pino": "^0.5.7",
    "@sentry/node": "^8.47.0",
    "@sentry/profiling-node": "^8.47.0",
    "body-parser": "^2.0.0-beta.1",
    "cheerio": "^1.0.0-rc.12",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "googleapis": "^140.0.1",
    "jimp": "^1.6.0",
    "liquidjs": "^10.24.0",
    "neverthrow": "^8.2.0",
    "object-hash": "^3.0.0",
    "pino": "^8.21.0",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^10.0.0",
    "showdown": "^2.1.0",
    "ts-import": "^5.0.0-beta.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "zod": "^3.25.0"
  },
  "optionalDependencies": {
    "puppeteer": "^23.10.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@storybook/html-vite": "^10.1.11",
    "@types/cheerio": "^0.22.31",
    "@types/ejs": "^3.1.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.10.2",
    "@types/object-hash": "^3.0.6",
    "@types/showdown": "^2.0.6",
    "concurrently": "^9.2.1",
    "jest": "^29.5.0",
    "storybook": "^10.1.11",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  }
}
