<div class="layout layout--col calendar">
  <section class="flex flex--col">
    <h1 class="title">{{ data.date }}</h1>
    <div class="flex flex--col">
      {% assign classes = "rounded-2 border border-2 border-black w--6 h--6" %}
      {% for month in data.days %}
        <div class="month inline-flex">
          {% for i in (1..month[0]) %}
            <div class="bg--black {{classes}}"></div>
          {% endfor %}
          {% for i in (1..month[1]) %}
            <div class="{{classes}}"></div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </section>
</div>
