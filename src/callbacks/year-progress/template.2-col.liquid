<div class="layout layout--col calendar">
  <section class="flex flex--col">
    <h1 class="title">{{ data.date }}</h1>
    <div class="flex flex--col" style="max-width: 80%">
      {% assign classes = "rounded-1 border border-black w--4 h--4" %}
      {% for month in data.days %}
        <div class="month inline-flex flex--wrap">
          {% for i in (1..month[0]) %}
            <div class="bg-black {{classes}}"></div>
          {% endfor %}
          {% for i in (1..month[1]) %}
            <div class="{{classes}}"></div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </section>
</div>
<style>
  .month {
    --gap: 2px;
  }
</style>
