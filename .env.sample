PORT="4545"
LOG_LEVEL="warn"

# Better Stack (formerly Logtail) - Remote logging (Optional)
# Get your source token from: https://logs.betterstack.com/
# Free tier: 1GB/month with 3-day retention
LOGTAIL_SOURCE_TOKEN=""
LOGTAIL_ENDPOINT="https://in.logs.betterstack.com" # Optional custom endpoint

WEATHER_APIKEY=""

# Google Calendar API credentials
# See src/callbacks/calendar/index.ts for setup instructions
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REFRESH_TOKEN=""

SENTRY_DSN=""

# Browser rendering configuration
# Options: "puppeteer" (default), "cloudflare", "browserless", or "multi"
BROWSER_RENDERER="puppeteer"

# Required when BROWSER_RENDERER=cloudflare
CLOUDFLARE_ACCOUNT_ID=""
CLOUDFLARE_API_TOKEN=""

# Required when BROWSER_RENDERER=browserless
BROWSERLESS_IO_TOKEN=""

# Optional: Enable/disable specific services when BROWSER_RENDERER=multi
ENABLE_CLOUDFLARE_BROWSER_RENDERING="false"
ENABLE_BROWSERLESS_IO="false"

# Optional: Path to Chromium binary (only used with puppeteer renderer)
CHROMIUM_BIN=""

# Maximum number of images to keep in tmpdir (default: 1000)
MAX_IMAGES_TO_KEEP=1000

# Admin interface password protection
# Leave empty to disable password protection
ADMIN_PASSWORD=""
TODOIST_APIKEY=""
